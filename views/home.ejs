<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link rel="stylesheet" href="/style/custom.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <title>Golden shoe</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #da920e9d;">
            <b><a class="navbar-brand" href="#">Golden Shoe</a></b>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <a class="active" href="/home"><i class="fa fa-fw fa-home"></i></a>

            <div class="collapse navbar-collapse my-2" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>

              <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-dark me-5" type="submit">Search</button>
              </form>

              <div class="navbar me-2">
                <span id="group">
                  <!-- <button type="button" class="btn btn-info" style="margin:5px; background: none;">
                   <i class="fa fa-fw fa-shopping-cart"></i>
                  </button> -->
                  <a class="active" href="/cart"><i class="fa fa-fw fa-shopping-cart"></i></a>
                  <span class="badge badge-light"><%=cartSize%></span>
                </span>
              </div>

              <ul class="navbar-nav me-2 sign-in">
                <% if(typeof user !== 'undefined') { %>
                  <li class="nav-item dropdown me-4">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      Hi, <%=user%>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <li><a class="dropdown-item" href="/logout">Log Out</a></li>
                    </ul>
                  </li>
                  <% } else { %>
                  <li class="nav-item me-4">
                    <a class="nav-link" style="color: #000;" aria-current="page" href="/sign-in">Sign In</a>
                  </li>
                  <% } %>
              </ul>
            </div>
        </nav>

        <!-- Adding carousel to the website -->
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="/images/carousel_images/sale.png" class="d-block w-100 carousel-img" alt="slide1">
            </div>
            <div class="carousel-item">
              <img src="/images/carousel_images/sale2.png" class="d-block w-100 carousel-img" alt="slide2">
            </div>
            <div class="carousel-item">
              <img src="/images/carousel_images/sale3.png" class="d-block w-100 carousel-img" alt="slide3">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </a>
        </div>

      <!-- Shoe cards  -->
      <% Object.keys(shoeList).forEach(function (key) { %>
        <h3><%=key%></h3>
        <div class="row">
            <% for(let j = 0; j < shoeList[key].length; j++) { %>
            <div class="col-sm-3">
            <div class="card">
              <div class="image-wrap">
                <img class="card-img-top image-zoom" src="<%=shoeList[key][j].image%>" alt="Card image cap"/>
              </div>
              <div class="card-body">
                <h5 class="card-title">Shoe</h5>
                <p class="card-text">Best shoe in the world!</p>
                <a href="/details/<%=shoeList[key][j].id%>" class="btn btn-dark">Details</a>
              </div>
            </div>
          </div>
          <% } %>
        </div>
        <% }) %>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>
</html>