<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link rel="stylesheet" href="/style/custom.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <title>Golden shoe</title>
    </head>
    <body>
      <%- include ('./common/navbar.ejs') -%>
      <%- include ('./common/message.ejs') -%>
        <!-- Adding carousel to the website -->
        <div id="carouselExampleControls" class="carousel slide m-4" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <a href="/details/1005"><img src="/images/men/shoe5/shoe.jpg" class="d-block w-100 carousel-img carousel-crop" alt="slide1"></a>
            </div>
            <div class="carousel-item">
              <a href="/details/2002"><img src="/images/women/shoe2/shoe.jpg" class="d-block w-100 carousel-img carousel-crop" alt="slide2"></a>
            </div>
            <div class="carousel-item">
              <a href="/details/1004"><img src="/images/men/shoe4/shoe.jpg" class="d-block w-100 carousel-img carousel-crop" alt="slide2"></a>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </a>
        </div>

      <!-- Shoe cards  -->
      <% for (const [category, itemList] of Object.entries(shoeList)) { %>
        <p class="m-4 fw-bold fs-3"><%=category.toUpperCase()%></p>
        <div class="row">
            <% for (let i = 0; i < itemList.length && i < 4; i++) {
              let item = itemList[i]; %>
            <div class="col-sm-3">
            <div class="card card-body-color">
              <div class="image-wrap">
                <a href="/details/<%=item.id%>"><img class="card-img-top image-zoom" src="<%=item.image%>" alt="Card image cap"/></a>
              </div>
              <div class="card-body">
                <h5 class="card-title">Shoe</h5>
                <p class="card-text">Best shoe in the world!</p>
                <a href="/details/<%=item.id%>" class="btn btn-dark">Details</a>
              </div>
            </div>
          </div>
          <% } %>
        </div>
        <% } %>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>
</html>