<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link rel="stylesheet" href="/style/custom.css">

        <title>Golden shoe</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <b><a class="navbar-brand" href="#">Golden Shoe</a></b>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
        </nav>

        <!-- Shoe details -->
        <div class="row">
          <div class="col-sm-8">
            <div class="row">
              <% for(let i = 0; i < shoeInfo.shoeviews.length; i++) { %>
              <div class="col-sm-6 shoe-image">
                  <img class="img-fluid" src="<%=shoeInfo.shoeviews[i]%>"/>
              </div>
                <%if (i % 2 == 1) { %>
                  </div>
                  <div class="row">
                <% } %>
              <% } %>
            </div>
          </div>
          <div class="col-sm-4">
            <h3>Shoe Details for : <%=shoeInfo.id%></h3>
            <h3>Price : <%=shoeInfo.price%></h3>
            <h3>Name : <%=shoeInfo.name%></h3>

            <div class="row">
              <% for(let i = 0; i < shoeInfo.sizes.length; i++) { %>
              <div class="col-sm-3 p-1">
                <input type="radio" class="btn-check" name="options-outlined" id="secondary-outlined<%=i%>" autocomplete="off" <%=shoeInfo.sizes[i].isAvail ? "" : "disabled"%>>
                <label class="btn btn-outline-secondary w-100" for="secondary-outlined<%=i%>"><%=shoeInfo.sizes[i].size%></label>
              </div>
              <% } %>
            </div>

          </div>
        </div>
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
      </body>
</html>